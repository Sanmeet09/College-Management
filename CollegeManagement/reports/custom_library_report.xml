    <!--    header template-->
    <template id="external_layout_standard_library">
        <!--        this is for header part -->
        <div t-attf-class="header o_company_#{company.id}_layout">
            <div class="o_boxed_header"/>
        </div>
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="o_boxed_header"/>
            <t t-raw="0"/>
        </div>

        <!--        this is for footer part-->
        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">


                <table style="width:100%">
                    <tr>
                        <td style=" " class="text-left">I/We hereby confirm the above</td>
                        <td style="float:right;" class="text-right">Yours faithfully,</td>
                    </tr>
                </table>
            </div>


        </div>
    </template>

    <!--    footer template -->
    <template id="library_custom_invoice">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!--  Multicompany  -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-call="CollegeManagement.external_layout_standard_library">
            <t t-raw="0"/>
        </t>
    </template>
</odoo>
